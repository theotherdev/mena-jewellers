{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

<div class="page-section">
  <h1>{{ page.title }}</h1>

  {{ page.content }}
</div>

{% stylesheet %}
  .page-section {
    padding-top: 60px;
  }

  @media (min-width: 768px) {
    .page-section {
      padding-top: 68px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.page",
  "settings": []
}
{% endschema %}
