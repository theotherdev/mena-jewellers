{
  "name": "kiswa-noir",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run build:css --watch",
    "build": "bun run build:css && bun run build:js",
    "build:css": "bunx tailwindcss -i ./src/tailwind.css -o ./assets/tailwind.css --minify",
    "build:js": "bunx terser src/js/header.js -o assets/header.js -c -m && bunx terser src/js/lazy-load.js -o assets/lazy-load.js -c -m && bunx terser src/js/product.js -o assets/product.js -c -m",
    "build:js:header": "bunx terser src/js/header.js -o assets/header.js -c -m",
    "build:js:lazy-load": "bunx terser src/js/lazy-load.js -o assets/lazy-load.js -c -m",
    "build:js:product": "bunx terser src/js/product.js -o assets/product.js -c -m"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "terser": "^5.37.0"
  }
}
